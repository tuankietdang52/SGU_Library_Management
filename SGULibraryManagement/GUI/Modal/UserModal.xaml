<Window x:Class="SGULibraryManagement.GUI.Modal.UserModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGULibraryManagement.GUI.Modal"
        mc:Ignorable="d"
        Title="UserModal" Height="500" Width="800">
    <Grid Margin="12,0,-12,0">
        <TextBlock x:Name="lbTitle" HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontSize="24" Margin="283,-1,0,0">
            Thêm thành viên
        </TextBlock>
        <TextBlock 
                 Height="20"
                 VerticalAlignment="Top"
                 Margin="139,67,548,0" FontFamily="Arial" FontSize="18" Text="Họ và Tên"/>
        <TextBox x:Name="txtHo" 
                 Height="35"
                 VerticalAlignment="Top"
                 Margin="279,59,352,0" TextBlock.FontFamily="Arial" TextBlock.FontSize="18"/>
        <TextBlock 
            Height="20"
            VerticalAlignment="Top"
            Margin="139,122,532,0" FontFamily="Arial" FontSize="18" Text="Số điện thoại"/>
        <TextBox x:Name="txtSdt" 
            Height="35"
            VerticalAlignment="Top"
            Margin="279,114,217,0" TextBlock.FontFamily="Arial" TextBlock.FontSize="18"/>
        <TextBlock 
            Height="20"
            VerticalAlignment="Top"
            Margin="139,177,543,0" FontFamily="Arial" FontSize="18" Text="Email"/>
        <TextBox x:Name="txtEmail" 
            Height="35"
            VerticalAlignment="Top"
            Margin="279,169,217,0" TextBlock.FontFamily="Arial" TextBlock.FontSize="18"/>
        <TextBlock 
            Height="20"
            VerticalAlignment="Top"
            Margin="137,233,545,0" FontFamily="Arial" FontSize="18" Text="Tài khoản"/>
        <TextBox x:Name="txtTaiKhoan" 
            Height="35"
            VerticalAlignment="Top"
            Margin="278,224,217,0" TextBlock.FontFamily="Arial" TextBlock.FontSize="18"/>
        <TextBlock 
            Height="20"
            VerticalAlignment="Top"
            Margin="139,292,543,0" FontFamily="Arial" FontSize="18" Text="Mật khẩu"></TextBlock>
        <PasswordBox x:Name="txtMatKhau" 
            Height="35"
            VerticalAlignment="Top"
            Margin="278,284,217,0" FontFamily="Arial" FontSize="18"></PasswordBox>
        <Button x:Name="btn" Content="Thêm" Margin="457,409,0,0" VerticalAlignment="Top" Width="110" Height="42" FontFamily="Arial" FontSize="20" FontWeight="Bold" Click="btn_Click"></Button>
        <TextBox x:Name="txtTen" 
            Height="35"
            VerticalAlignment="Top"
            Margin="453,59,218,0" TextBlock.FontFamily="Arial" TextBlock.FontSize="18"/>
        <TextBlock 
            Height="20"
            VerticalAlignment="Top"
            Margin="138,353,544,0" FontFamily="Arial" FontSize="18" Text="Vai trò"/>
        <ComboBox x:Name="cbxQuyen" 
            Height="35"
            VerticalAlignment="Top"
            Margin="278,344,217,0" FontFamily="Arial" FontSize="18">
        </ComboBox>
    </Grid>
</Window>
