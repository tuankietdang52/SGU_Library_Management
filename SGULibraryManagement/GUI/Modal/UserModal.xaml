<Window x:Class="SGULibraryManagement.GUI.Modal.UserModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGULibraryManagement.GUI.Modal"
        mc:Ignorable="d"
        Title="UserModal" Height="450" Width="800">
    <Grid Margin="12,0,-12,0">
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" FontFamily="Arial" FontSize="24" Margin="283,-1,0,0">
            Thêm thành viên
        </TextBlock>
        <TextBlock 
                 Height="20"
                 VerticalAlignment="Top"
                 Margin="139,67,548,0" FontFamily="Arial" FontSize="18" Text="Mã thành viên"/>
        <TextBox x:Name="txtMa" 
                 Height="35"
                 VerticalAlignment="Top"
                 Margin="279,59,217,0" TextBlock.FontFamily="Arial" TextBlock.FontSize="18"/>
        <TextBlock 
            Height="20"
            VerticalAlignment="Top"
            Margin="139,122,576,0" FontFamily="Arial" FontSize="18" Text="Họ tên"/>
        <TextBox x:Name="txtHoTen" 
            Height="35"
            VerticalAlignment="Top"
            Margin="279,114,217,0" TextBlock.FontFamily="Arial" TextBlock.FontSize="18"/>
        <TextBlock 
            Height="20"
            VerticalAlignment="Top"
            Margin="139,177,543,0" FontFamily="Arial" FontSize="18" Text="Khoa"/>
        <TextBox x:Name="txtKhoa" 
            Height="35"
            VerticalAlignment="Top"
            Margin="279,169,217,0" TextBlock.FontFamily="Arial" TextBlock.FontSize="18"/>
        <TextBlock 
            Height="20"
            VerticalAlignment="Top"
            Margin="137,233,545,0" FontFamily="Arial" FontSize="18" Text="Nghành"/>
        <TextBox x:Name="txtNghanh" 
            Height="35"
            VerticalAlignment="Top"
            Margin="278,224,217,0" TextBlock.FontFamily="Arial" TextBlock.FontSize="18"/>
        <TextBlock 
            Height="20"
            VerticalAlignment="Top"
            Margin="139,292,543,0" FontFamily="Arial" FontSize="18" Text="Số điện thoại"></TextBlock>
        <TextBox x:Name="txtSDT" 
            Height="35"
            VerticalAlignment="Top"
            Margin="278,284,217,0" FontFamily="Arial" FontSize="18"></TextBox>
        <Button x:Name="btnAdd" Content="Thêm" Margin="490,342,0,0" VerticalAlignment="Top" Width="79" Height="42" FontFamily="Arial" FontSize="20" FontWeight="Bold"></Button>
    </Grid>
</Window>
