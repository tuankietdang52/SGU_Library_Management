<UserControl x:Class="SGULibraryManagement.GUI.EquipmentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SGULibraryManagement.GUI"
             mc:Ignorable="d"
             Style="{StaticResource ContentStyle}">
    <StackPanel Margin="0, 10, 0, 0">
        <Canvas>
            <TextBlock Canvas.Left="10"
                       FontWeight="Bold"
                       FontSize="30"><Run Text="All Equipments"/></TextBlock>
            <Button Canvas.Right="30"
                    Foreground="White"
                    Background="Black"
                    Height="50"
                    Padding="10, 0, 10, 0"
                    Style="{StaticResource RoundButton10}">

                <StackPanel HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                    <Label Content="&#xF055;"
                           VerticalAlignment="Center"
                           FontFamily="{StaticResource FontAwesomeSolid}"/>
                    <Viewbox Width="5"/>
                    <TextBlock Text="Add New Equipment"/>
                </StackPanel>
            </Button>
        </Canvas>
    </StackPanel>
</UserControl>
