<UserControl x:Class="SGULibraryManagement.GUI.SettingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SGULibraryManagement.GUI"
             mc:Ignorable="d" d:DesignWidth="800" Height="530">
    <Grid>
        <Canvas Margin="10" VerticalAlignment="Top">

          
            <TextBlock FontFamily="Arial" FontSize="32" Text="Thông tin tài khoản"
                   Canvas.Left="250" Canvas.Top="10" />

          
            <TextBlock FontFamily="Arial" FontSize="18" Text="Họ"
                   Canvas.Left="150" Canvas.Top="80" />
            <TextBox x:Name="txtHo" Width="200" FontSize="18"
                 Canvas.Left="150" Canvas.Top="110" />

        
            <TextBlock FontFamily="Arial" FontSize="18" Text="Tên"
                   Canvas.Left="400" Canvas.Top="80" />
            <TextBox x:Name="txtTen" Width="200" FontSize="18"
                 Canvas.Left="400" Canvas.Top="110" />

         
            <TextBlock FontFamily="Arial" FontSize="18" Text="Email"
                   Canvas.Left="150" Canvas.Top="160" />
            <TextBox x:Name="txtEmail" Width="450" FontSize="18"
                 Canvas.Left="150" Canvas.Top="190" />

        
            <TextBlock FontFamily="Arial" FontSize="18" Text="Mật khẩu"
                   Canvas.Left="150" Canvas.Top="240" />
            <TextBox x:Name="txtPassword" Width="450" FontSize="18"
                 Canvas.Left="150" Canvas.Top="270" />

        
            <TextBlock FontFamily="Arial" FontSize="18" Text="Số điện thoại"
                   Canvas.Left="150" Canvas.Top="320" />
            <TextBox x:Name="txtPhone" Width="450" FontSize="18"
                 Canvas.Left="150" Canvas.Top="350" />

     
            <Button x:Name="btnSave" Content="Lưu" Width="100" Height="50"
                FontFamily="Arial" FontSize="18" Background="#33FF0000"
                Canvas.Left="300" Canvas.Top="420" Click="btnSave_Click"/>

        </Canvas>
    </Grid>
</UserControl>
