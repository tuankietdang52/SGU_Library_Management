<UserControl x:Class="SGULibraryManagement.GUI.Contents.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SGULibraryManagement.GUI"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:buttons="clr-namespace:SGULibraryManagement.Components.Buttons"
             xmlns:dashboards="clr-namespace:SGULibraryManagement.Components.Dashboards"
             mc:Ignorable="d"
             Style="{StaticResource ContentStyle}">
    <Grid>
        <StackPanel Margin="0, 10, 0, 0">
            <Canvas Height="70">
                <TextBlock Canvas.Left="30"
                           FontWeight="Bold"
                           FontSize="30">
                    Dashboard
                </TextBlock>
            </Canvas>
            <dashboards:DashboardQuantityStatistics x:Name="quantityStatistics"
                                                    HorizontalAlignment="Left">
            </dashboards:DashboardQuantityStatistics>
            <Border Width="{Binding Source={StaticResource AppContentWidth}, 
                      Converter={StaticResource SubtractConverter}, 
                      ConverterParameter=50}"
                    Height="450"
                    BorderThickness="1"
                    BorderBrush="Black"
                    CornerRadius="10"
                    Margin="0, 10">
                <StackPanel>
                    <Grid Width="300"
                          HorizontalAlignment="Left"
                          Margin="10, 10">
                        <ComboBox x:Name="statisticOptions"
                                  Width="200"
                                  Height="40"
                                  SelectionChanged="OnOptionChanged">
                        </ComboBox>
                    </Grid>
                    <Grid>
                        <StackPanel x:Name="top3Container"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <Grid Width="350"
                                  Height="380">
                                <oxy:PlotView Model="{Binding Top3BorrowModel}"
                                              Background="Transparent"
                                              BorderThickness="0">
                                </oxy:PlotView>
                            </Grid>
                            <Viewbox Width="50"></Viewbox>
                            <Grid Width="350"
                                  Height="380">
                                <oxy:PlotView Model="{Binding Top3UserModel}"
                                              Background="Transparent"
                                              BorderThickness="0">
                                </oxy:PlotView>
                            </Grid>
                        </StackPanel>
                        <StackPanel x:Name="userStatusContainer"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center">
                            <Grid Width="400"
                                  Height="380">
                                <oxy:PlotView x:Name="userStatusChart"
                                              Background="Transparent"
                                              BorderThickness="0">
                                </oxy:PlotView>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>
