<ui:FluentWindow x:Class="SGULibraryManagement.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SGULibraryManagement"
        xmlns:views="clr-namespace:SGULibraryManagement.GUI"
        xmlns:sideMenu="clr-namespace:SGULibraryManagement.Components.SideMenu"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Width="{StaticResource AppWidth}"
        Height="{StaticResource AppHeight}"
        ResizeMode="NoResize"
        Title="SGU Library Management">
    <ui:FluentWindow.Resources>
        <Storyboard x:Key="ContentFadeIn">
            <DoubleAnimation Storyboard.TargetName="content"
                             Storyboard.TargetProperty="Opacity"
                             From="0.0"
                             To="1.0"
                             Duration="0:0:0.25">
            </DoubleAnimation>
        </Storyboard>
    </ui:FluentWindow.Resources>
    <StackPanel Width="{StaticResource AppWidth}"
                Height="{StaticResource AppHeight}">
        <ui:TitleBar Title="SGU Library Management"
                     Height="30"
                     ShowMaximize="False"
                     CanMaximize="False"/>
        <DockPanel Height="{StaticResource AppHeight}">
            <Canvas DockPanel.Dock="Top" 
                    Height="{StaticResource HeaderHeight}"
                    Background="{StaticResource AppThemeColor}">
                <StackPanel Canvas.Left="20"
                            Canvas.Top="10"
                            Orientation="Horizontal">
                    <Image Source="/Resources/Images/Books.png"
                           Height="60"
                           Width="60"
                           Margin="10, 0">
                    </Image>
                    <StackPanel Height="60">
                        <TextBlock Height="27"
                                   FontSize="20"
                                   Foreground="White"
                                   FontWeight="Bold">
                            SGU LIBRARY
                        </TextBlock>
                        <TextBlock Height="27"
                                   FontSize="20"
                                   Foreground="White">
                            EQUIPMENT MANAGEMENT
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Canvas>
            <Border BorderBrush="LightGray" 
                    BorderThickness="1">
                <StackPanel x:Name="sideMenu"
                            DockPanel.Dock="Left"
                            Width="{StaticResource SideMenuWidth}"
                            Background="White">
                    <sideMenu:SideMenuItem x:Name="SideMenuHomeItem"
                                   Text="Home"
                                   Glyph="&#xf015;"
                                   MouseDown="Navigate">
                        <sideMenu:SideMenuItem.ContentView>
                            <views:HomeView></views:HomeView>
                        </sideMenu:SideMenuItem.ContentView>
                    </sideMenu:SideMenuItem>

                    <sideMenu:SideMenuItem Text="Schedule"
                                           Glyph="&#xf073;"
                                           MouseDown="Navigate">
                        <sideMenu:SideMenuItem.ContentView>
                            <views:ScheduleView></views:ScheduleView>
                        </sideMenu:SideMenuItem.ContentView>
                    </sideMenu:SideMenuItem>

                    <sideMenu:SideMenuItem Text="Equipments"
                                           Glyph="&#xf5fd;"
                                           MouseDown="Navigate">
                        <sideMenu:SideMenuItem.ContentView>
                            <views:EquipmentsView></views:EquipmentsView>
                        </sideMenu:SideMenuItem.ContentView>
                    </sideMenu:SideMenuItem>

                    <sideMenu:SideMenuItem Text="Users"
                                           Glyph="&#xf0c0;"
                                           MouseDown="Navigate">
                        <sideMenu:SideMenuItem.ContentView>
                            <views:UsersView></views:UsersView>
                        </sideMenu:SideMenuItem.ContentView>
                    </sideMenu:SideMenuItem>
                    
                    <sideMenu:SideMenuItem Text="Settings"
                                           Glyph="&#xf0ad;"
                                           MouseDown="Navigate">
                        <sideMenu:SideMenuItem.ContentView>
                            <views:SettingView></views:SettingView>
                        </sideMenu:SideMenuItem.ContentView>
                    </sideMenu:SideMenuItem>
                </StackPanel>
            </Border>
            <Frame x:Name="content"
                   DockPanel.Dock="Right"
                   NavigationUIVisibility="Hidden">
            </Frame>
        </DockPanel>
    </StackPanel>
</ui:FluentWindow>
