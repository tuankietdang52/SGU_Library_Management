<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:tables="clr-namespace:SGULibraryManagement.Components.Tables"
                    xmlns:buttons="clr-namespace:SGULibraryManagement.Components.Buttons">
    <Style TargetType="{x:Type tables:ActionColumn}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type tables:ActionColumn}">
                    <StackPanel Orientation="Horizontal"
                                Margin="0, 10, 0, 10">
                        <buttons:RoundButton x:Name="viewAction"
                                             Content="&#xf06e;"
                                             FontFamily="{DynamicResource FontAwesomeSolid}"
                                             Background="#00A2E8"
                                             HoverBackgroundColor="Blue"
                                             CornerRadius="50"
                                             FontSize="13"
                                             Height="35"
                                             Width="35"
                                             Foreground="White"
                                             Margin="0, 0, 10, 0">

                        </buttons:RoundButton>
                        <buttons:RoundButton x:Name="editAction"
                                             Content="&#xf044;"
                                             FontFamily="{DynamicResource FontAwesomeSolid}"
                                             Background="LightGreen"
                                             HoverBackgroundColor="Green"
                                             CornerRadius="50"
                                             FontSize="13"
                                             Height="35"
                                             Width="35"
                                             Foreground="White"
                                             Margin="0, 0, 10, 0">

                        </buttons:RoundButton>
                        <buttons:RoundButton x:Name="deleteAction"
                                             Content="&#xf2ed;"
                                             FontFamily="{DynamicResource FontAwesomeSolid}"
                                             Background="Red"
                                             HoverBackgroundColor="DarkRed"
                                             CornerRadius="50"
                                             FontSize="13"
                                             Height="35"
                                             Width="35"
                                             Foreground="White">

                        </buttons:RoundButton>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>