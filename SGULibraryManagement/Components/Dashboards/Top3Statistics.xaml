<UserControl x:Class="SGULibraryManagement.Components.Dashboards.Top3Statistics"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SGULibraryManagement.Components.Dashboards"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d">
    <StackPanel x:Name="top3Container"
                Orientation="Horizontal"
                HorizontalAlignment="Center">
        <Grid Width="500"
              Height="380">
            <oxy:PlotView x:Name="top3DeviceChart"
                      Background="Transparent"
                      BorderThickness="0">
            </oxy:PlotView>
        </Grid>
        <Viewbox Width="50"></Viewbox>
        <Grid Width="500"
              Height="380">
            <oxy:PlotView x:Name="top3UserChart"
                          Background="Transparent"
                          BorderThickness="0">
            </oxy:PlotView>
        </Grid>
    </StackPanel>
</UserControl>
