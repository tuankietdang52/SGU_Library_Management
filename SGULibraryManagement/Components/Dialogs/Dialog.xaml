<ui:FluentWindow x:Class="SGULibraryManagement.Components.Dialogs.Dialog"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:SGULibraryManagement.Components.Dialogs"
                 xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
                 WindowStartupLocation="CenterScreen"
                 ResizeMode="NoResize"
                 mc:Ignorable="d">
    <StackPanel>
        <ui:TitleBar x:Name="titleBar"
                     Height="30"
                     Background="{StaticResource AppThemeSecondary}"
                     Foreground="White"
                     ButtonsForeground="White"
                     ShowMaximize="False"
                     CanMaximize="False"/>
        <ContentPresenter x:Name="dialogContent"></ContentPresenter>
    </StackPanel>
</ui:FluentWindow>